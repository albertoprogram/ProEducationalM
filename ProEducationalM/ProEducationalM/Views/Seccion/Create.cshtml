@model ProEducationalM.Models.Seccion
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    @*<meta name="viewport" content="width=device-width" />*@

    <title>Create</title>

    @* Referencia a Bootstrap - Las siguientes 4 líneas *@
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta http-equiv="X-UA-Compatible" content="ie-edge" />
    <link href="~/Scripts/Bootstrap/bootstrap-4.5.0-dist/css/bootstrap.min.css" rel="stylesheet" />

    @* Referencia a JQuery *@
    <script src="~/Scripts/JQuery/jquery-3.5.1.min.js"></script>

    <link href="~/Styles/ProEducationalMStyles.css" rel="stylesheet" type="text/css" />

    @* Control de los mensajes a usuario *@
    <script type="text/javascript">
        $(document).ready(function () {
            setTimeout(function () {
                //$(".divMensaje").fadeOut(1500);
                $("#successMessage").remove();
            }, 7000);

            setTimeout(function () {
                //$(".divMensaje").fadeOut(1500);
                $("#errorMessage").remove();
            }, 7000);

            //setTimeout(function () {
            //    $(".content2").fadeIn(1500);
            //}, 6000);
        });
    </script>

</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <!-- ******************* EMPIEZA EL CONTENIDO ******************* -->

        <div class="container">

            <div class="row" id="fila_superior_1">
                <div class="col">
                </div>
            </div>

            <div class="row" id="contenedor">
                <div class="col">
                    <h1>Paralelos</h1>
                </div>
            </div>

            <div class="row" id="fila_superior_2">
                <div class="col">
                </div>
            </div>

            <div class="row">
                <div class="col-12 col-sm-12 col-md-2  col-lg-1 col-xl-1">
                </div>
                <div class="col-12 col-sm-12 col-md-10 col-lg-11 col-xl-11 lead">
                    @Html.LabelFor(model => model.NombreSeccion, htmlAttributes: new { @class = "control-label" })
                </div>
            </div>

            <div class="row">
                <div class="col-12 col-sm-12 col-md-2  col-lg-1 col-xl-1">
                </div>
                <div class="col-12 col-sm-12 col-md-8 col-lg-6 col-xl-6">
                    @Html.EditorFor(model => model.NombreSeccion, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NombreSeccion, "", new { @class = "text-danger" })
                </div>
                <div class="col-12 col-sm-12 col-md-2  col-lg-5 col-xl-5">
                </div>
            </div>

            <div>
                @Html.Hidden("ID", 0)
            </div>

            <div class="row" id="fila_superior_2">
                <div class="col">
                </div>
            </div>

            <div class="row contenedor_boton">
                <div class="col">
                    <button id="SaveButton" type="submit" class="col-12 col-sm-12 col-md-6 col-lg-4 col-xl-4 btn btn-primary">Guardar</button>
                </div>
            </div>

            <div class="row">
                <div>
                    @if (TempData["Exito"] != null)
                    {
                        <div class="alert alert-success" id="successMessage">
                            @TempData["Exito"]
                        </div>
                    }
                </div>
            </div>

            <div class="row">
                <div>
                    @if (TempData["ErrorMensaje"] != null)
                    {
                        <div class="alert alert-danger" id="errorMessage">
                            @TempData["ErrorMensaje"]
                        </div>
                    }
                </div>
            </div>

        </div>
    }

    <script src="~/Scripts/SeccionJs/Seccion.js"></script>

    @* Referencia a Bootstrap - Las siguientes 3 líneas *@
    <script src="~/Scripts/Bootstrap/bootstrap-4.5.0-dist/js/jquery-3.5.1.slim.min.js"></script>
    <script src="~/Scripts/Bootstrap/bootstrap-4.5.0-dist/js/popper.min.js"></script>
    <script src="~/Scripts/Bootstrap/bootstrap-4.5.0-dist/js/bootstrap.min.js"></script>
</body>
</html>
